<% if(issues.length >0 ) {%>
<div style="padding: 20px">
  <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <form
      class="flex items-center justify-between py-4 bg-white dark:bg-gray-800"
      style="padding-left: 40px; padding-right: 40px"
    >
      <div class="flex flex-row gap-6">
        <input
          type="text"
          id="labels"
          name="labels"
          class="block p-2 px-4 text-sm text-gray-900 border border-gray-300 rounded-lg w-80 bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
          placeholder="Search By Labels"
        />
        <input
          type="text"
          id="search"
          name="search"
          class="block p-2 px-4 text-sm text-gray-900 border border-gray-300 rounded-lg w-80 bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
          placeholder="Search By Keywords"
        />
        <input
          type="text"
          id="author"
          name="author"
          class="block p-2 px-4 text-sm text-gray-900 border border-gray-300 rounded-lg w-80 bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
          placeholder="Search By Authors"
        />
      </div>
      <button
        type="submit"
        class="flex flex-row rounded bg-blue-600 items-center text-white py-2 px-4"
      >
        <svg
          class="w-4 h-4 text-gray-500 mr-3 dark:text-white"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 20 20"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"
          />
        </svg>
        Search
      </button>
    </form>
    <table class="w-full text-base text-left text-gray-500 dark:text-gray-400">
      <thead
        class="text-lg text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
      >
        <tr>
          <th scope="col" class="px-6 py-3">S no.</th>
          <th scope="col" class="px-6 py-3">Title</th>
          <th scope="col" class="px-6 py-3">Descriptions</th>
